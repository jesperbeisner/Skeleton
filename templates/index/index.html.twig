{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row mt-3">
            <div class="col-md-12">
                <h1>
                    Users
                </h1>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-12">
                <div class="card card-blue">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover text-center">
                                <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Username</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                    <tr id="user-{{ user.id }}">
                                        <th scope="row" class="user-id-data">
                                            {{ user.id }}
                                        </th>
                                        <td class="user-username-data">
                                            {{ user.username }}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
